@model CaptainTravel.Models.Siniflar.BlogYorum

    @{
        ViewBag.Title = "BlogDetay";
        Layout = "~/Views/Shared/_TestLayout.cshtml";
    }
    <!DOCTYPE HTML>
    <html>
    <head>
        <title>Personal Blog a Blogging Category Flat Bootstarp  Responsive Website Template | Single :: w3layouts</title>
        <link href="~/webblog/css/bootstrap.css" rel='stylesheet' type='text/css' />
        <link href="~/webblog/css/style.css" rel='stylesheet' type='text/css' />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	    Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
        <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
        <!----webfonts---->
        <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
        <!----//webfonts---->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <!--end slider -->
        <!--script-->

    </head>
    <body>
        <!---header---->
        <div class="header">
        </div>
        <!--/header-->
        <div class="single">
            <div class="container">
                <div class="col-md-8 single-main">
                    <div class="single-grid">
                        @foreach(var x in Model.Deger1) {

                        <img src="@x.BlogImage" alt="" style="margin-bottom:20px"/>
                        <h2>@x.Baslik</h2>
                        <p>
                            @x.Aciklama
                        </p>
                        }
                    </div>
                    @foreach (var y in Model.Deger2)
                    {
                    <ul class="comment-list">
                        <li>
                            <img src="~/webblog/images/avatar.png" class="img-responsive" alt="">
                            <div class="desc">
                                <p>@y.KullaniciAdi: @y.Yorum</p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                    }
                    @Html.Action("YorumYap","Blog")
                </div>

                <div class="col-md-4 side-content">
                    <div class="recent">
                        <h3>Sık Kullanılan Bloglar</h3>
                        <ul>
                            <li><a href="#">Paris</a></li>
                            <li><a href="#">İstanbul</a></li>
                            <li><a href="#">Roma</a></li>
                            <li><a href="#">Londra</a></li>
                        </ul>
                    </div>
                    <div class="comments">
                        <h3>Son Yorumlar</h3>
                        <ul>
                            <li><a href="#">Ferhat Korkutata </a> on <a href="#">Seni Seviyorum Londra </a></li>
                            <li><a href="#">Ali Rıza Korkutata </a> on <a href="#"> Büyüleyici bir şehir</a></li>
                            <li><a href="#">Handan Tunçer </a> on <a href="#">Ankarayı şimdiden özledim.</a></li>
                        </ul>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </body>
</html>

